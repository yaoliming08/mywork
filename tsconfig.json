{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "DOM"],
    "types": ["@dcloudio/types"],
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["src/modules/*"],
      "@model/*": ["src/model/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@request/*": ["src/request/*"],
      "@stores/*": ["src/stores/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
